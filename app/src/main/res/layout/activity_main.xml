<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <!-- Flashlight Button in Main Activity -->

    <Button
        android:id="@+id/btn_flashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_lightbulb" />

    <!-- Flashlight TextView in Main Activity -->

    <TextView
        android:id="@+id/tv_flashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_flashlight"
        android:layout_below="@+id/btn_flashlight"
        android:layout_marginLeft="26dp"
        android:text="چراغ"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- Strobe Button in Main Activity -->

    <Button
        android:id="@+id/btn_strobe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_flashlight"
        android:layout_alignBottom="@+id/btn_flashlight"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_strobe" />
    <!-- Strobe TextView in Main Activity -->

    <TextView
        android:id="@+id/tv_strobe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_flashlight"
        android:layout_alignBottom="@+id/tv_flashlight"
        android:layout_alignRight="@+id/btn_strobe"
        android:text="چشمک زن دستی"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <!-- Music Button in Main Activity -->

    <Button
        android:id="@+id/btn_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_flashlight"
        android:layout_below="@+id/tv_flashlight"
        android:layout_marginTop="88dp"
        android:background="@drawable/ic_music" />

    <!-- Music Text View in Main Activity -->

    <TextView
        android:id="@+id/tv_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_music"
        android:layout_below="@+id/btn_music"
        android:text="چشمک زن صوتی"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <!-- Movement Button in Main Activity -->

    <Button
        android:id="@+id/btn_movement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_music"
        android:layout_alignRight="@+id/tv_strobe"
        android:background="@drawable/ic_movement" />
    <!-- Movement Button in Main Activity -->

    <TextView
        android:id="@+id/tv_movement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_music"
        android:layout_alignBottom="@+id/tv_music"
        android:layout_alignRight="@+id/btn_movement"
        android:text="چشمک زن حرکتی"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>